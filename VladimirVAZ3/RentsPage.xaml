<Page x:Class="VladimirVAZ3.RentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VladimirVAZ3"      
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RentsPage" Initialized="Page_Initialized">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="RentsVehicle">
                <Border Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0.7*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Source="{Binding ImageVehicle}"
                               Stretch="Fill">
                            <Image.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="15" BlurRadius="10" Opacity="0.5"/>
                            </Image.Effect>
                        </Image>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Label Content="{Binding YearEnter}"
                                   Grid.Row="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0"
                                       Content="{Binding CPP}"
                                       HorizontalAlignment="Center"/>

                                <Label Grid.Column="1"
                                       Content="{Binding PlaceSeat}"
                                       HorizontalAlignment="Center"/>
                            </Grid>

                            <materialDesign:TimePicker x:Name="Time"
                                                       Background="LightGray"
                                                       Grid.Row="2"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       SelectedTime="01:00" 
                                                       SelectedTimeChanged="Time_SelectedTimeChanged"/>
                        </Grid>
                    </Grid>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="1.2*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0">
                <materialDesign:PackIcon Kind="ArrowBack"
                                         Height="40"
                                         Width="50"
                                         Cursor="Hand" PreviewMouseDown="PackIcon_PreviewMouseDown"/>
                <Label Margin="150, 0"
                   x:Name="NameVehicle"
                   Content="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="22"/>
            </WrapPanel>

            <Grid Grid.Row="1" 
                        x:Name="Rents">
            </Grid>

            <Label x:Name="EndPrice"
                   Grid.Row="2"
                   Content="1111"
                   FontSize="22"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"/>

            <Button x:Name="GetVehicle"
                    Grid.Row="3"
                    Content="Забронировать"
                    Style="{StaticResource RoundedButtonStyle}"
                    Height="50"
                    Width="120"
                    Background="LightPink" Click="GetVehicle_Click"/>
        </Grid>
    </Grid>
</Page>
