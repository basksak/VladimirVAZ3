<Page x:Class="VladimirVAZ3.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:VladimirVAZ3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="BuyVehicle">
                <Border Height="200"
                        Width="600"
                        Margin="10"
                        BorderThickness="0.5" 
                        BorderBrush="Black"
                        CornerRadius="10">

                    <Border.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="15" BlurRadius="20" Opacity="0.5"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0.7*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Stretch="Fill"
                               Source="{Binding ImageVehicle}"/>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Label Content="{Binding NameVehicle}"
                                   FontSize="16"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Label Content="{Binding YearEnter}"/>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0"
                                               Content="{Binding CPP}"/>

                                        <Label Grid.Column="1"
                                               Content="{Binding PlaceSeat}"/>
                                    </Grid>
                                </Grid>

                                <Label Grid.Column="1"
                                       VerticalAlignment="Top"
                                       Content="Стоимость аренды"/>
                                <Label Grid.Column="1"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Content="{Binding Price}"/>
                            </Grid>

                            <Button Grid.Row="2"
                                    Style="{StaticResource RoundedButtonStyle}"
                                    Background="LightPink"
                                    Height="50"
                                    Width="120"
                                    x:Name="Buy"
                                    Content="Арендовать"
                                    Foreground="Black" Click="Buy_Click"/>
                        </Grid>
                    </Grid>
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="ClosedVehicle">
                <Border Height="200"
                        Width="600"
                        Margin="10"
                        BorderThickness="0.5" 
                        BorderBrush="Black"
                        CornerRadius="10"
                        Background="LightPink">

                    <Border.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="15" BlurRadius="20" Opacity="0.5"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0.7*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Stretch="Fill"
                               Source="{Binding ImageVehicle}"/>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Label Content="{Binding NameVehicle}"
                                   FontSize="16"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Label Content="{Binding YearEnter}"/>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0"
                                               Content="{Binding CPP}"/>

                                        <Label Grid.Column="1"
                                               Content="{Binding PlaceSeat}"/>
                                    </Grid>
                                </Grid>

                                <Label Grid.Column="1"
                                       VerticalAlignment="Top"
                                       Content="Стоимость аренды"/>
                                <Label Grid.Column="1"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Content="{Binding Price}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="1"
                   Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom">
            <Button Content="Седаны"
                    Margin="3" Click="ButtonSorter_Click"/>
            <Button Content="Внедорожники"
                    Margin="3" Click="ButtonSorter_Click"/>
            <Button Content="Спорткары"
                    Margin="3" Click="ButtonSorter_Click"/>
            <Button Content="Кроссовер"
                    Margin="3" Click="ButtonSorter_Click"/>
            <Button Content="Хэтчбек"
                    Margin="3" Click="ButtonSorter_Click"/>
            <Button Content="Минвэн"
                    Margin="3" Click="ButtonSorter_Click"/>
            <Button Content="Пикап"
                    Margin="3" Click="ButtonSorter_Click"/>
            <Button Content="Купе"
                    Margin="3" Click="ButtonSorter_Click"/>
            <Button Content="Лимузин"
                    Margin="3" Click="ButtonSorter_Click"/>
            <Button Content="Кабриолет"
                    Margin="3" Click="ButtonSorter_Click"/>
        </WrapPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SortedActive"
                    Grid.Column="0"
                    Margin="4"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="LightGreen"
                    Height="40"
                    Width="200"
                    Content="Свободные"
                    Foreground="Black" Click="SortedActive_Click"/>

            <Button x:Name="SortedFull"
                    Grid.Column="1"
                    Margin="4"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="LightGray"
                    Height="40"
                    Width="200"
                    Content="Все"
                    Foreground="Black" Click="SortedFull_Click"/>
        </Grid>

        <ScrollViewer Grid.Row="3">
            <StackPanel x:Name="Vechicle">
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="Basket"
                Grid.Row="0"
                Style="{StaticResource RoundedButtonStyle}"
                Content="Моя машина"
                Width="150" Click="Basket_Click"/>


        <Frame x:Name="Rents"
               Grid.Row="0"
               Grid.RowSpan="4"
               VerticalAlignment="Bottom"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
