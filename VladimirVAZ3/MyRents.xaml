<Page x:Class="VladimirVAZ3.MyRents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:VladimirVAZ3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyRents">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="RentsVehicle">
                <Border Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0.7*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Height="200"
                               Source="{Binding ImageVehicle}">
                            <Image.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="15" BlurRadius="10" Opacity="0.5"/>
                            </Image.Effect>
                        </Image>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Label Content="{Binding YearEnter}"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0"
                           Content="{Binding CPP}"
                           HorizontalAlignment="Center"/>

                                <Label Grid.Column="1"
                           Content="{Binding PlaceSeat}"
                           HorizontalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid
        Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <materialDesign:PackIcon Kind="ArrowBack"
                                 Height="30"
                                 Width="40"
                                 Cursor="Hand" PreviewMouseDown="PackIcon_PreviewMouseDown"/>
        <Label x:Name="NameVehicle"
               Content=""
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="20"/>

        <StackPanel Grid.RowSpan="3"
                    x:Name="NoneRents">
            
            <materialDesign:PackIcon
                Kind="FaceConfusedOutline"
                Foreground="Orange"
                Height="200"
                Width="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"/>

            <Label
                Content="Ничего не найдено"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="32"
                Foreground="Orange"/>
        </StackPanel>

        <StackPanel x:Name="MyRent"
                    Grid.Row="1">
        </StackPanel>

        <Label x:Name="Time"
               Grid.Row="2"
               Content="11111"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="32"/>
    </Grid>
</Page>
